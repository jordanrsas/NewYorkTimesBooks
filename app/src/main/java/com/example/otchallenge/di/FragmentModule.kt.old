package com.example.otchallenge.di

import com.example.otchallenge.presentation.view.BookDetailFragment
import com.example.otchallenge.presentation.view.BookListFragment
import com.example.otchallenge.presentation.view.BookView
import dagger.Module
import dagger.Provides
import dagger.android.ContributesAndroidInjector

@Module
abstract class FragmentModule {

    @ContributesAndroidInjector(modules = [BookListFragmentModule::class])
    abstract fun contributeBookListFragment(): BookListFragment

    @ContributesAndroidInjector(modules = [BookDetailFragmentModule::class])
    abstract fun contributeBookDetailFragment(): BookDetailFragment
}

@Module
class BookListFragmentModule {
    @Provides
    fun provideBookView(fragment: BookListFragment): BookView = fragment
}

@Module
class BookDetailFragmentModule {
    @Provides
    fun provideBookView(fragment: BookDetailFragment): BookView  = fragment
}